<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zl.administrator.fetalmonitor">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity android:name=".Controllers.MainActivity">

        </activity>
        <activity android:name=".Controllers.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controllers.RegActivity">
        </activity>
        <activity android:name=".Controllers.TipsActivity">
        </activity>
        <activity android:name=".Controllers.UnderstandActivity">
        </activity>
        <activity android:name=".Controllers.DirectionActivity">
        </activity>
        <activity android:name=".Controllers.BluetoothListActivity">
        </activity>
        <activity android:name=".Controllers.UserInfoActivity">
        </activity>
        <activity android:name=".Controllers.SettingActivity">
        </activity>
        <activity android:name=".Controllers.AboutActivity">
        </activity>
        <activity android:name=".Controllers.GuideActivity">
        </activity>
        <service
            android:name="com.zl.administrator.fetalmonitor.Controllers.BluetoothService">
        </service>
    </application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <!-- 蓝牙模块权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!--往sdcard中写入数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


</manifest>