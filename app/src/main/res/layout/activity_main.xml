<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout

        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/left_menu_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/setting"
            android:scaleType="fitXY"/>

        <RadioGroup
            android:id="@+id/rg_tab_bar"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_monitor"
                style="@style/tab_item"
                android:text="胎心监测" />

            <RadioButton
                android:id="@+id/rb_history"
                style="@style/tab_item"
                android:layout_marginLeft="10dp"
                android:text="历史记录" />

            <RadioButton
                android:id="@+id/rb_knowledge"
                style="@style/tab_item"
                android:layout_marginLeft="10dp"
                android:text="知识库" />
        </RadioGroup>
    </LinearLayout>

    <View
        android:id="@+id/div_title_view"
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_below="@+id/main_title"
        android:layout_marginLeft="1.0dp"
        android:layout_marginRight="1.0dp"
        android:layout_marginTop="3dp"
        android:background="@color/div" />

    <FrameLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/div_title_view"
        android:layout_marginTop="3dp">

    </FrameLayout>
    </LinearLayout>
    <fragment
        android:id="@+id/left_menu"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:name="com.zl.administrator.fetalmonitor.LeftMenu"
        android:layout_gravity="start"
        android:tag="LEFT"
        tools:layout="@layout/left" />
</android.support.v4.widget.DrawerLayout>
